extends ../partials/layout

block head
    include ../partials/head
    +makeHead('Rally Point Webinars | Home')

block content
    include ../partials/navbar
    +makeNavbar('index')
    header.homepage
        .container
            .intro-text
                .row
                    .intro-heading webinars.
                    .intro-lead-in Businesses and organizations come to us for when it counts.
                    a.page-scroll.btn.btn-xl(href='#about') Tell Me More
    section#about.homepage
        .container
            .row
                .col-lg-12
                    h2.section-heading Our Mission
                    p.mission-text Rally Point Webinars is a webinar production and project management company devoted to delivering professional, online events. We are distinct in that other webinar providers are primarily technology vendors that offer add-on event support.
            br
            br
            .row
                .col-md-12.text-center
                    a.process-link(href='./services.html') View Our Services &raquo;
        a.down-arrow.page-scroll(href='#technology')
            i.fa.fa-angle-double-down(aria-hidden='true')
    section#technology.homepage
        .container
            .row
                .col-md-12
                    h2.section-heading Our Technology
        .technology-mobile
            .container
                .row
                    p.caption We provide our clients with Adobe #[sup &reg]; Connect #[sup &trade;], the best webinar technology out there.
                    .image.one
                .row
                    p.caption Our technological setup that has you covered for every contingency, from backup webinar rooms to backup conference lines, to everything in between.
                    .image.two
                .row
                    p.caption Our webinar registration platform that is fully customizable, mobile friendly, and matches your branding.
                    .image.three
                .row
                    p.caption Get video recordings to generate leads after the webinar is over.
                    .image.four
        #technology-carousel.carousel.slide(data-ride='carousel')
            h2.section-heading Our Technology
            ol.carousel-indicators
                li.active(data-target='#technology-carousel', data-slide-to='0')
                li(data-target='#technology-carousel', data-slide-to='1')
                li(data-target='#technology-carousel', data-slide-to='2')
                li(data-target='#technology-carousel', data-slide-to='3')
            .carousel-inner(role='listbox')
                .item.active
                    .heading
                        p.caption We provide our clients with Adobe&reg; Connect&trade;, the best webinar technology out there.
                    .image.one
                .item
                    .heading
                        p.caption A technological setup that has you covered for every contingency, from backup webinar rooms to backup conference lines, to everything in between.
                    .image.two
                .item
                    .heading
                        p.caption Our webinar registration platform that is fully customizable, mobile friendly, and matches your branding.
                    .image.three
                .item
                    .heading
                        p.caption Get video recordings to generate leads after the webinar is over.
                    .image.four
            a.left.carousel-control(href='#technology-carousel', role='button', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                |
                span.sr-only Previous
            a.right.carousel-control(href='#technology-carousel', role='button', data-slide='next')
                span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                |
                span.sr-only Next
        a.down-arrow.page-scroll(href='#thinking')
            i.fa.fa-angle-double-down(aria-hidden='true')
    section#thinking
        .container
            .row
                .col-lg-12
                    h2.section-heading Thinking
            .thinking-cards
                .thinking-card
                    .text
                        a.title(target='_blank', rel='noopener', href='http://events.rallypointwebinars.com/course/webinar.php?id=2897&source=homepage')
                            h3 An Interview With the &quot;Webinar Guru&quot;
                    .image
                        img.img-responsive(src='images/topsalescover-aaronv2.jpg', alt='Top Sales Cover: Aaron Joslow')
                .thinking-card
                    .text
                        a.title(target='_blank', rel='noopener', href='http://events.rallypointwebinars.com/course/webinar.php?id=271&source=rpweventpage')
                            h3 The 7 Keys to Running a Glitch-Free Webinar
                    .image
                        img.img-responsive(src='images/whitepaperimage-registration.jpg', alt='Running A Glitch-Free Webinar')
        a.down-arrow.page-scroll(href='#commitment')
            i.fa.fa-angle-double-down(aria-hidden='true')
    section#commitment.bg-light-gray
        .container
            .row
                .col-lg-12.text-center
                    h2.section-heading Our Commitment
                    h3.section-subheading.text-muted
                        em We will provide you with the best webinar platform, technology, and services.
                    br
                    h3.section-subheading.text-muted
                        em You will have a partner who ensures that your webinars deliver results, that your speakers are prepared, and that and your customers, prospects, and employees are taken care of.
            .row
        a.down-arrow.page-scroll(href='#contact')
            i.fa.fa-angle-double-down(aria-hidden='true')
    include ../partials/contact
    include ../partials/footer
    include ../partials/bottom
