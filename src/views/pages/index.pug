extends ../partials/layout

block head
    include ../partials/head
    +makeHead('Rally Point Webinars | Home')

block content
    include ../partials/navbar
    +makeNavbar('home')
    header.homepage
        .container
            .intro-text
                .row
                    .intro-heading webinars.
                    .intro-lead-in Businesses and organizations come to us for when it counts.
                    a.page-scroll.btn.btn-xl(href='#what-we-do') Tell Me More <span class="carot">&raquo;</span>
        a.down-arrow.page-scroll(href='#what-we-do')
            i.fa.fa-angle-double-down(aria-hidden='true')
    section#what-we-do.homepage
        .container
            .row
                h2.section-heading We take accountability for your webinar from start to finish.
            .row
                .col-md-4
                    a(href="./services.html#pre-production")
                        img.icon(src="images/001-calendar.svg" alt="Pre-Production")
                    a(href="./services.html#pre-production")
                        h3 Pre-#[br]Production <span class="carot">&raquo;</span>
                    p We handle registration and project management.
                .col-md-4
                    a(href="./services.html#production")
                        img.icon(src="images/002-rocket.svg" alt="Production")
                    a(href="./services.html#production")
                        h3 Production <span class="carot">&raquo;</span>
                    p We provide the technology and produce the event.
                .col-md-4
                    a(href="./services.html#post-production")
                        img.icon(src="images/003-diagram.svg" alt="Post-Production")
                    a(href="./services.html#post-production")
                        h3 Post-#[br]Production <span class="carot">&raquo;</span>
                    p We host the recording and provide on-demand leads.
        a.down-arrow.page-scroll(href='#thinking')
            i.fa.fa-angle-double-down(aria-hidden='true')
    section#thinking.bg-light-gray
        .container
            .row
                .col-lg-12
                    h2.section-heading Recognized and Results Driven
            .thinking-cards
                .thinking-card
                    .text
                        a.title(target='_blank', rel='noopener', href='http://rpw.rallypointwebinars.technology/local/rallypoint/webinar.php?id=136&source=rpwhomepage')
                            h3 An Interview With the &quot;Webinar Guru&quot;
                    .image
                        a.title(target='_blank', rel='noopener', href='http://rpw.rallypointwebinars.technology/local/rallypoint/webinar.php?id=136&source=rpwhomepage')
                            img.img-responsive(src='images/topsalescover-aaronv2.jpg', alt='Top Sales Cover: Aaron Joslow')
                .thinking-card
                    .text
                        a.title(href='./generating-fortune-1000-leads-with-events.html')
                            h3 Generating Fortune 1000 Leads with Hundreds of Global Events
                    .image
                        a(href='./generating-fortune-1000-leads-with-events.html')
                            img(src='images/fortune-1000.jpg', alt='Generating Fortune 1000 leads with 100 global events, without adding staff')
        a.down-arrow.page-scroll(href='#technology')
            i.fa.fa-angle-double-down(aria-hidden='true')
    section#technology.homepage
        .container
            .row
                h2.section-heading The Webinar Platform
                p.text We will provide you with premium webinar technology and services.
                img(src="images/adobe-connect-slide.jpg" alt="Adobe Connect")
        a.down-arrow.page-scroll(href='#commitment')
            i.fa.fa-angle-double-down(aria-hidden='true')
    section#commitment.bg-light-gray
        .container
            .row
                .col-lg-12.text-center
                    h2.section-heading Our Commitment
                    h3.section-subheading.text-muted
                        em We will provide you with the best webinar platform, technology, and services.
                    br
                    h3.section-subheading.text-muted
                        em You will have a partner who ensures that your webinars deliver results, that your speakers are prepared, and that your customers, prospects, and employees are taken care of.
            .row
        a.down-arrow.page-scroll(href='#contact')
            i.fa.fa-angle-double-down(aria-hidden='true')
    include ../partials/contact
    include ../partials/footer
    include ../partials/bottom
