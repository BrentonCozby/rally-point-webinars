section#contact
    .container
        .row
            .col-lg-12.text-center
                h2.section-heading Contact Us
        .row
            .col-lg-12
                form#contactForm(name='sentMessage', novalidate='')
                    .row
                        .col-md-6
                            .form-group
                                input#name.form-control(type='text', placeholder='Name *', required='', data-validation-required-message='Please enter your name.')
                                p.help-block.text-danger
                            .form-group
                                input#email.form-control(type='email', placeholder='Email *', required='', data-validation-required-message='Please enter your email address.')
                                p.help-block.text-danger
                            .form-group
                                input#phone.form-control(type='tel', placeholder='Phone *', required='', data-validation-required-message='Please enter your phone number.')
                                p.help-block.text-danger
                        .col-md-6
                            .form-group
                                textarea#message.form-control(placeholder='Message *', required='', data-validation-required-message='Please enter a message.')
                                p.help-block.text-danger
                    .row
                        .col-lg-12
                            button.btn.btn-xl(type='submit') Send Message
                            br
                            #success
        .row
            .col-lg-12.text-center
                h3.section-subheading.address
